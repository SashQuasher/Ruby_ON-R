    </header>
    <section class="container">
            <%= image_tag(@imag, :alt => @alt, :size => @size, :class =>"imag") %>
            <%= yield %>
        </section>
        <footer>
            <div class="bottom-bar center">
                Developed by Emmanuel Quijas Valades.All Rights Reserved Â© 2017
            </div>
</footer>
